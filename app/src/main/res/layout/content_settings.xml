            <Button
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backgroundTint="@color/brown"/>

            <Button
